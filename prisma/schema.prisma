generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model cars {
  id          Int      @id @default(autoincrement()) // Primærnøgle
  name        String   // @db-VarChar(255) // Bilens navn eller model
  engine_type String   // 3-cylinder eller 4-cylinder
  horsepower  Int      // Motorens HK
  weight      Int      // Vægt i kg
  createdAt   DateTime @default(now()) // Timestamp for oprettelse
}

